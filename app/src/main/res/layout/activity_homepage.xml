<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context=".homepage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <ImageView
            android:id="@+id/header_cover"
            android:layout_width="527dp"
            android:layout_height="148dp"
            android:src="@drawable/headerrevv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/halo_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="25sp"
            android:text="Halo, Keysha"
            android:textColor="@color/white"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:text="Mau daur ulang apa hari ini?"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/halo_user"
            />

        <ImageView
            android:id="@+id/waypoints_widget"
            android:layout_width="131dp"
            android:layout_height="121dp"
            android:src="@drawable/wayy"
            android:layout_marginTop="28dp"
            android:layout_marginStart="-180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_cover"
            />

        <Button
            android:id="@+id/btn_widget_waypoints"
            android:layout_width="131dp"
            android:layout_height="121dp"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="@id/waypoints_widget"
            app:layout_constraintStart_toStartOf="@id/waypoints_widget"
            />

        <ImageView
            android:id="@+id/starcyle_widget"
            android:layout_width="131dp"
            android:layout_height="121dp"
            android:src="@drawable/starr"
            android:layout_marginTop="28dp"
            android:layout_marginStart="-5dp"
            app:layout_constraintStart_toEndOf="@id/waypoints_widget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_cover"
            />

        <Button
            android:id="@+id/btn_widget_starcycle"
            android:layout_width="131dp"
            android:layout_height="121dp"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="@id/starcyle_widget"
            app:layout_constraintStart_toStartOf="@id/starcyle_widget"
            android:layout_marginStart="-1dp"
            />

        <ImageView
            android:id="@+id/akumulasi"
            android:layout_width="420dp"
            android:layout_height="108dp"
            android:src="@drawable/shapeakum"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/waypoints_widget"
            />

        <TextView
            android:id="@+id/sampahorganik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Sampah Organik"
            android:layout_marginTop="20dp"
            android:layout_marginStart="45dp"
            app:layout_constraintStart_toStartOf="@id/akumulasi"
            app:layout_constraintTop_toTopOf="@id/akumulasi"
            />

        <TextView
            android:id="@+id/jumlah_sampahorganik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="20 Kg"
            android:layout_marginTop="40dp"
            android:layout_marginStart="45dp"
            app:layout_constraintStart_toStartOf="@id/sampahorganik"
            app:layout_constraintTop_toTopOf="@id/sampahorganik"
            app:layout_constraintTop_toBottomOf="@+id/sampahorganik"
            />

        <TextView
            android:id="@+id/botol_plastik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Botol Plastik"
            android:layout_marginStart="100dp"
            app:layout_constraintTop_toTopOf="@id/sampahorganik"
            app:layout_constraintStart_toEndOf="@id/sampahorganik"
            />

        <TextView
            android:id="@+id/jumlah_botol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="25"
            android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="@+id/botol_plastik"
            app:layout_constraintTop_toBottomOf="@id/botol_plastik"
            app:layout_constraintStart_toEndOf="@id/jumlah_sampahorganik"
            app:layout_constraintTop_toTopOf="@id/jumlah_sampahorganik"
            />

        <TextView
            android:id="@+id/artikell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Artikel"
            android:layout_marginStart="25dp"
            android:layout_marginTop="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/akumulasi"
            />

        <ImageView
            android:id="@+id/artikel_1"
            android:layout_width="361dp"
            android:layout_height="135dp"
            android:src="@drawable/artikelfix"
            android:layout_marginTop="13dp"
            app:layout_constraintStart_toStartOf="@+id/artikell"
            app:layout_constraintTop_toBottomOf="@id/artikell"
            />

        <Button
            android:id="@+id/btn_artikel1"
            android:layout_width="361dp"
            android:layout_height="135dp"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="@id/artikel_1"
            app:layout_constraintStart_toStartOf="@id/artikel_1"
            />

        <ImageView
            android:id="@+id/artikel_2"
            android:layout_width="361dp"
            android:layout_height="135dp"
            android:src="@drawable/artikel2"
            android:layout_marginTop="29dp"
            app:layout_constraintStart_toStartOf="@+id/artikel_1"
            app:layout_constraintTop_toBottomOf="@id/artikel_1"
            />

        <Button
            android:id="@+id/btn_artikel2"
            android:layout_width="361dp"
            android:layout_height="135dp"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="@id/artikel_2"
            app:layout_constraintStart_toStartOf="@id/artikel_2"
            />

        <ImageView
            android:id="@+id/artikel_3"
            android:layout_width="361dp"
            android:layout_height="135dp"
            android:src="@drawable/artikel3"
            android:layout_marginTop="29dp"
            app:layout_constraintStart_toStartOf="@+id/artikel_2"
            app:layout_constraintTop_toBottomOf="@id/artikel_2"
            />

        <Button
            android:id="@+id/btn_artikel3"
            android:layout_width="361dp"
            android:layout_height="135dp"
            android:alpha="0"
            app:layout_constraintTop_toTopOf="@id/artikel_3"
            app:layout_constraintStart_toStartOf="@id/artikel_3"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>