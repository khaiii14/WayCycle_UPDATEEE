<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context=".starcycle_1">

    <ImageView
        android:layout_width="420dp"
        android:layout_height="278dp"
        android:src="@drawable/header_starcycle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/icon_back_starcycle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/back_white"
        android:layout_marginTop="35dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_back_starcycle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/icon_back_starcycle"
        app:layout_constraintTop_toTopOf="@+id/icon_back_starcycle"
        app:layout_constraintStart_toStartOf="@id/icon_back_starcycle"
        app:layout_constraintEnd_toEndOf="@id/icon_back_starcycle"
        />

    <TextView
        android:id="@+id/Starcycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/poppins_bold"
        android:text="WayPoints"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="@id/icon_back_starcycle"
        app:layout_constraintStart_toEndOf="@+id/icon_back_starcycle"
        app:layout_constraintTop_toTopOf="@id/icon_back_starcycle"
        />

    <ImageView
        android:id="@+id/star_leader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/leader"
        app:layout_constraintTop_toBottomOf="@id/Starcycle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="11dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>