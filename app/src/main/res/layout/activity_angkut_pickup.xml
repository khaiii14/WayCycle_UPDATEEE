<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    tools:context=".angkut_pickup">

    <ImageButton
        android:id="@+id/back_button_Angkut1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/back_button_black"
        android:contentDescription="Kembali ke Profile"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/satria_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Tunggu Satria jemput yaa!"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_button_Angkut1"
        />

    <ImageView
        android:id="@+id/icon_satria"
        android:layout_width="151dp"
        android:layout_height="130dp"
        android:src="@drawable/satria_baru"
        android:layout_marginTop="26dp"
        android:layout_marginStart="-20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/satria_activity"
        />

    <TextView
        android:id="@+id/status_satria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:text="Status Satria"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_satria"
        />

    <ImageView
        android:id="@+id/lines"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/lines"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_satria"
        />

    <ImageView
        android:id="@+id/icon_jemput"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/icon_jemput"
        android:layout_marginStart="21dp"
        app:layout_constraintStart_toEndOf="@id/lines"
        app:layout_constraintTop_toTopOf="@id/lines"
        app:layout_constraintTop_toBottomOf="@id/status_satria"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="Satria OTW ke tempat kamu yaa!"
        android:layout_marginStart="21dp"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toEndOf="@id/lines"
        app:layout_constraintTop_toTopOf="@id/lines"
        app:layout_constraintTop_toBottomOf="@id/icon_jemput"
        />

</androidx.constraintlayout.widget.ConstraintLayout>